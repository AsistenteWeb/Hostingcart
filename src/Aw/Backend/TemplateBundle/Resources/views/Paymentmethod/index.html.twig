{% extends 'AwBackendTemplateBundle::base.html.twig' %}

{% block content_title %}{% trans %}Planes Hosting{% endtrans %}{% endblock content_title %}
{% block breadcrumb %}
    <div class="breadcrumb"><a href="{{ path('paymentmethod_new') }}" class="btn btn-block btn-success"> <i class="fa fa-plus"></i> {% trans %}Nuevo Metodo de Pago{% endtrans %}</a></div>
{% endblock breadcrumb %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <div id="list" class="box">
            <div class="box-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>MÃ³dulo</th>
                            <th>Habilitado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for paymentmethod in paymentmethods %}
                        <tr>
                            <td>{{ paymentmethod.id }}</td>
                            <td>{{ paymentmethod.name }}</td>
                            <td>{{ paymentmethod.module }}</td>
                            <td>{{ paymentmethod.enable }}</td>
                            <td>
                                <form action="{{ path('paymentmethod_edit', { 'id': paymentmethod.id }) }}" method="get">
                                    <button type="submit" class="btn btn-small">
                                        <i class="ion-edit"></i> Editar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>
{% endblock %}

