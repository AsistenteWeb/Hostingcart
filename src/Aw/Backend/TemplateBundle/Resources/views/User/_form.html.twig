<div class="col-md-12">
    <div class="box box-primary">
        <div class="row"><div class="row">
            <div class="col-md-6">
                <!-- general form elements -->
                <!-- form start -->
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nombre <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Nombre'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Apellido <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Apellido'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Empresa</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.company, {'attr': {'class': 'form-control', 'placeholder': 'Empresa'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">País <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': 'País'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Región <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.state, {'attr': {'class': 'form-control', 'placeholder': 'Región'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Ciudad <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Ciudad'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Dirección 1 <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.address1, {'attr': {'class': 'form-control', 'placeholder': 'Dirección 1'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Dirección 2</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.address2, {'attr': {'class': 'form-control', 'placeholder': 'Dirección 2'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cód. Postal <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.zipcode, {'attr': {'class': 'form-control', 'placeholder': 'Código Postal'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Teléfono <span class="text-red">*</span></label>
                        <div class="col-sm-10">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Teléfono'}}) }}
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            <div class="col-md-6">
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Usuario <span class="text-red">*</span></label>
                        <div class="col-sm-9">
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Usuario'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Contraseña <span class="text-red">{{ usuario.id ? '' : '*' }}</span></label>
                        <div class="col-sm-9">
                            {{ form_widget(form.plain_password, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Correo <span class="text-red">*</span></label>
                        <div class="col-sm-9">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Correo'}}) }}
                        </div>
                    </div>
                    <div class="col-sm-offset-2" class="checkbox">
                        <label>
                            {{ form_widget(form.enabled) }} Habilitado
                        </label>
                    </div>
                </div>
                <div class="box-footer" style="padding-right: 50px; margin-right: 20px">
                    <a href="{{ path('backend_user_index') }}" class="btn btn-default" type="submit">Cancelar</a>
                    {{ form_widget(form.save) }}
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>
    </div>
</div><!--/.col (left) -->