{% extends('AwUserBundle::layout.html.twig') %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="login-form"><!--login form-->
        <h2>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h2>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" />
            <input type="password" id="password" name="_password" required="required"  placeholder="{{ 'security.login.password'|trans }}"  />
                <span>
                        <input type="checkbox" id="remember_me" class="checkbox" name="_remember_me" value="on" />
                        {{ 'security.login.remember_me'|trans }}
                </span>
            <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
        </form>
    </div><!--/login form-->
{% endblock fos_user_content %}
